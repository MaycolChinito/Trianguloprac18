<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trianguloprac18.MainPage">

    <ScrollView>
        <VerticalStackLayout Margin="20,35,20,20">
            <Entry x:Name="ladoA" Placeholder="ladoa"
             Keyboard="Numeric"/>

            <Entry x:Name="ladoB" Placeholder="Ingrese el ladoB"
                   Keyboard="Numeric"/>

            <Entry x:Name="ladoC" Placeholder="Ingrese el ladoC"
             Keyboard="Numeric"/>

            <Entry x:Name="arearespuesta" Placeholder="area"
                   Keyboard="Numeric"/>


            <Button Text="Calcular el area"
                    Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
